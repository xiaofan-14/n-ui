{
  "name": "n-ui-monorepo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm --filter @n-ui/playground dev",
    "docs:dev": "pnpm --filter @n-ui/docs dev",
    "docs:build": "pnpm --filter @n-ui/docs build",
    "storybook": "pnpm --filter @n-ui/playground storybook",
    "test": "run-p test:utils test:comp",
    "test:hooks": "cross-env NODE_ENV=test pnpm --filter @n-ui/hooks test",
    "test:comp": "cross-env NODE_ENV=test pnpm --filter @n-ui/components test",
    "test:utils": "cross-env NODE_ENV=test pnpm --filter @n-ui/utils test",
    "build": "run-s build-plugins build-hooks build-components",
    "build-plugins": "pnpm --filter @n-ui/vite-plugins build",
    "build-hooks": "cross-env NODE_ENV=production pnpm --filter @n-ui/hooks build",
    "build-components": "cross-env NODE_ENV=production pnpm --filter n-ui-mini build",
    "build:dev": "run-s build-hooks:dev build-components:dev",
    "build-hooks:dev": "cross-env NODE_ENV=development pnpm --filter @n-ui/hooks build",
    "build-components:dev": "cross-env NODE_ENV=development pnpm --filter n-ui-mini build:watch",
    "changed": "dotenv lerna version --conventional-commits --create-release github --yes",
    "changed:patch": "dotenv lerna version patch --conventional-commits --create-release github --yes",
    "changed:major": "dotenv lerna version major --conventional-commits --create-release github --yes",
    "release": "lerna publish from-package --yes"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@lerna-lite/cli": "^4.3.0",
    "@lerna-lite/publish": "^4.3.0",
    "@lerna-lite/version": "^4.3.0",
    "@popperjs/core": "^2.11.8",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.15.3",
    "@types/shelljs": "^0.8.16",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vitest/coverage-v8": "^3.1.2",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "async-validator": "^4.2.5",
    "concurrently": "^9.1.2",
    "conventional-changelog-conventionalcommits": "^9.0.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "jsdom": "^26.1.0",
    "npm-run-all": "^4.1.5",
    "release-it": "^19.0.2",
    "shelljs": "^0.10.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.4",
    "vite-plugin-dts": "3.9.1",
    "vitest": "^3.1.2",
    "vue3-i18n": "^1.1.5"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/vue-fontawesome": "^3.0.8",
    "@n-ui/components": "workspace:*",
    "@n-ui/hooks": "workspace:*",
    "@n-ui/locale": "workspace:*",
    "@n-ui/theme": "workspace:*",
    "@n-ui/utils": "workspace:*",
    "@n-ui/vite-plugins": "workspace:*",
    "@vitepress-preview/component": "workspace:*",
    "n-ui-mini": "workspace:*",
    "@vitejs/plugin-vue-jsx": "^4.1.2",
    "lodash-es": "^4.17.21",
    "postcss-color-mix": "^1.1.0",
    "postcss-each": "^1.1.0",
    "postcss-each-variables": "^0.3.0",
    "postcss-for": "^2.1.1",
    "postcss-nested": "^6.0.1",
    "vue": "^3.5.13"
  }
}
